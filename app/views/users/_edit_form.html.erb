<% form_for :user, current_user, :url => user_path(current_user), :html => { :method => :put } do |f| -%>
  <p>
    <b><%= f.label :lastname, I18n.t('lastname').capitalize %> : </b>
    <%= f.text_field :lastname %>
  </p>
  <p>
    <b><%= f.label :fistname, I18n.t('firstname').capitalize %> : </b>
    <%= f.text_field :firstname %>
  </p>
  <p>
    <b><%= f.label :email, I18n.t('email').capitalize %> : </b>
    <%= f.text_field :email %>
  </p>

  <%= submit_tag I18n.t('save').capitalize %>
<% end -%>
