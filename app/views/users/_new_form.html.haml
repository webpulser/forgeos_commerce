- form_for :user, flash[:user], :url => users_path, :html => { :autocomplete => 'off' } do |f|
  %p
    = f.label :fistname, t('firstname').capitalize
    %br
    = f.text_field :firstname
  %p
    = f.label :lastname, t('lastname').capitalize
    %br
    = f.text_field :lastname
  %p
    = f.label :birthday, t('birthday').capitalize
    %br
    %span.enhanced
      = f.date_select :birthday, :end_year => 1900, :start_year => Date.current.year, :prompt => { :day => t('date.day'), :month => t('date.month'), :year => t('date.year') }
  %p.enhanced
    = f.label :country_id, t('country').capitalize
    %br
    = f.collection_select :country_id, Country.all(:order => 'printable_name'), :id, :printable_name,{ :prompt => t('please_select').capitalize }
  %p
    = f.label :email, t('email').capitalize
    %br
    = f.text_field :email
  %p
    = f.label :password, t('password').capitalize
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation, t('password_confirmation').capitalize
    %br
    = f.password_field :password_confirmation
  %p.enhanced
    = f.label :lang, t(:lang, :count => 1)
    %br
    = f.select :lang, I18n.available_locales.collect{ |locale| [t(locale, :scope => [:lang, :full]),locale.to_s]}, :prompt => t(:please_select)
  %p
    = submit_tag t('sign_up').capitalize, :class => 'submit-button'
  .clear
