<%#= error_messages_for :user %>
<% form_for :user, flash[:user], :url => users_path do |f| -%>
  <p><%= f.label :fistname, I18n.t('Firstname') %></label><br/>
  <%= f.text_field :firstname %></p>
  
  <p><%= f.label :lastname, I18n.t('Lastname') %></label><br/>
  <%= f.text_field :lastname %></p>

  <p><%= f.label :email, I18n.t('E-mail') %></label><br/>
  <%= f.text_field :email %></p>

  <p><%= f.label :password, I18n.t('Password') %></label><br/>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, I18n.t('Confirm password') %></label><br/>
  <%= f.password_field :password_confirmation %></p>

  <p><%= submit_tag I18n.t('Sign up') %></p>
<% end -%>
