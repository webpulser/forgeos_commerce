!!!
%html{ "xml:lang" => "fr", :lang => "fr", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      = I18n.t :project_name
    %link{ :href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon" }
    = stylesheet_link_tag %w(design_aqtp rails_commerce jquery-ui/themes/redmond), :cache => 'base'
    = javascript_include_tag 'jquery'
  %body
    #application
      #header
        %h1
          = link_to(I18n.t(:project_name), :root)
        #display_standard_flashes
        .change_language
          - I18n.available_locales.each do |key, locale|
            = link_to_unless(I18n.locale.to_sym==key.to_sym, image_tag("flags/#{key}.gif"), :controller => 'home', :locale => key)
        %div
          \&nbsp;
        .change_currency
          - Currency.find(:all).each do |currency|
            = link_to_unless($currency==currency, currency.html, :controller => 'home', :action => 'change_currency', :id => currency)
        %div
          \&nbsp;
        .logged_in
          - if logged_in?
            = I18n.t(:hello).capitalize + '&nbsp;' + current_user.fullname
            = link_to I18n.t(:your_account).capitalize, user_path(current_user)
            = link_to I18n.t(:disconnect).capitalize, session_path, :method => :delete
          - else
            = link_to I18n.t(:log_in).capitalize, new_session_path
            = link_to I18n.t(:sign_up).capitalize, new_user_path
        %ul#nav.nav
          - build_menu
          = yield :menu
          %li
            - form_tag(:controller => 'catalog', :action => 'search') do
              = text_field_tag 'keywords'
              = submit_tag I18n.t('search').capitalize
        .clear
      #page
        #content
          .display_categories
            = display_categories
          .yield= yield
        - unless %w(cart order wishlist).include?(@controller.controller_name)
          #cart
            = display_cart(@cart, false, true)
          #wishlist
            = display_wishlist(@wishlist, false, true)
      #ancillary
        .blocks
          .block.first
            .clear
          #footer
            %p
              \&copy; 2009
              = link_to 'Webpulser', 'http://www.webpulser.com', :popup => true
              | Designs :
              = link_to 'Default', :controller => 'home', :action => 'change_design', :design => 'design_aqtp'
              = link_to 'Minimalist', :controller => 'home', :action => 'change_design', :design => 'all'
              | Demos :
              = link_to 'Book', "http://book.rails-commerce.com"
              = link_to 'Flower', "http://flower.rails-commerce.com"
      = javascript_include_tag %w(jquery-ui jrails jquery.droppy application), :cache => 'base'
      = drop_receiving_element('cart', :accept=> '.product,.product_show', :url => {:controller => 'cart', :action => 'add_product'}, :with => "'id='+($(ui.draggable).attr('id').split('_')[1])", :update => 'cart', :hoverClass => 'hover' )
      = drop_receiving_element('wishlist', :accept=> '.product,.product_show', :url => {:controller => 'wishlist', :action => 'add_product'}, :with => "'id='+($(ui.draggable).attr('id').split('_')[1])", :update => 'wishlist', :hoverClass => 'hover' )
      = display_standard_flashes
