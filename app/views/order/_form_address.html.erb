<% address = address || nil %>

<% form_remote_for :address, address, :url => { :controller => 'order', :action => 'create_address', :id => address } do |f| %>
  <p><b><label><%= I18n.t('type').capitalize %></label> : </b>
    <%= f.select :kind, [[I18n.t('address.delivery').capitalize, 'AddressDelivery'], [I18n.t('address.invoice').capitalize, 'AddressInvoice']] %>
  </p>
  <p><b><label><%= I18n.t('civility').capitalize %></label> : </b>
    <%= f.collection_select :civility_id, Civility.all, :id, :name, { :prompt => I18n.t('please_select').capitalize } %>
  </p>
  <p><b><label><%= I18n.t('lastname').capitalize %></label> : </b>
    <%= f.text_field :name %>
  </p>
  <p><b><label><%= I18n.t('firstname').capitalize %></label> : </b>
    <%= f.text_field :firstname %>    
  </p>
  <p><b><label><%= I18n.t('address.one').capitalize %></label> : </b>
    <%= f.text_field :address %>
  </p>
  <p><b><label><%= I18n.t('address.one').capitalize %></label> : </b>
    <%= f.text_field :address_2 %>
  </p>
  <p><b><label><%= I18n.t('zip_code').capitalize %></label> : </b>
    <%= f.text_field :zip_code %>
  </p>
  <p><b><label><%= I18n.t('city').capitalize %></label> : </b>
    <%= f.text_field :city %>    
  </p>
  <p><b><label><%= I18n.t('country').capitalize %></label> : </b>
    <%= f.collection_select :country_id, Country.all, :id, :printable_name, { :prompt => I18n.t('please_select').capitalize } %>    
  </p>

  <%= submit_tag I18n.t('save').capitalize %>
  <%= link_to_remote(I18n.t('back').capitalize, :url => { :controller => 'order', :action => 'back_addresses' }) %>
<% end %>
