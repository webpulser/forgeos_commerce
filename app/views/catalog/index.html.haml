.inner-content
  -if !@selected_product.nil?
    .product-list
      .filters
        %span= t(:category_select)
        %div
          - if !@category_choice.nil?
            -selected = @category_choice
          - else
            -selected = @product_category

          -form_tag :action => 'index' do
            =hidden_field_tag :product_category_id, @product_category.id
            %div
              =select_tag 'category_choice', options_for_select([[t(:please_select),0]]+@product_category.children.collect{|c| [c.name, c.id]},selected.id)
            =submit_tag 'ok', :class=>'ok-button'

      .slider_product
        %ul#slider_products.jcarousel-list
          -@products.each do |product|
            %li.jcarousel-item
              -if !product.pictures.blank?
                = link_to image_tag(product.pictures.first.public_filename(:normal), :class => 'img_carousel'), product.public_url
              - else
                =link_to image_tag("/images/admin/no-image.png", :class => 'img_carousel'), product.public_url
              %span.price
                = number_with_precision(product.price,2)
                = $currency.html  
    =render :partial => 'products/show', :locals => { :product => @selected_product, :category => @product_category }
  -else
    .no_product
      .cart-step-content
        %h1
          = t('product.not_exist')
          Il n'y a pas de produit dans cette catégorie.
          = link_to "Retour à l'accueil", :root
    - content_for :title do
      =# link_to @product_category.name, catalog(:category_name => @product_category.name)
      &gt;
      =# selected.name
