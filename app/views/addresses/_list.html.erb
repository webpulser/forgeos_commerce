<table>
  <thead>
    <th><%= I18n.t('type').capitalize %></th>
    <th><%= I18n.t('address', :count=>1).capitalize %></th>
    <th><%= I18n.t('action', :count=>2).capitalize %></th>
  </thead>
  <tbody>
<% addresses.each do |address| %>
  <tr>
    <td><%= I18n.t(address.class == AddressInvoice ? 'address_invoice' : 'address_delivery').capitalize  %></td>
    <td>
      <%= render :partial => 'addresses/show', :locals => { :address => address } %>
    </td>
    <td>
      <%= link_to_remote I18n.t('edit').capitalize, :url => edit_address_path(address), :update => 'addresses', :method => 'get' %> -
      <%= link_to_remote I18n.t('destroy').capitalize, :url => address_path(address), :confirm => I18n.t('address.destroy.confirm').capitalize, :method => 'delete', :update => 'addresses' %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
