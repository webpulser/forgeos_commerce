<p>
  <b><%= I18n.t('avatar').capitalize %> : </b>
  <%= image_tag(@admin.avatar.public_filename(:small)) if @admin.avatar && !@admin.avatar.filename.nil? %>
</p>

<p>
  <b><%= I18n.t('email').capitalize %> : </b>
  <%=h @admin.email %>
</p>

<p>
  <b><%= I18n.t('lastname').capitalize %> : </b>
  <%=h @admin.lastname %>
</p>

<p>
  <b><%= I18n.t('firstname').capitalize %> : </b>
  <%=h @admin.firstname %>
</p>

<p>
  <b><%= I18n.t('role', :count => 2).capitalize %> : </b>
  <% @admin.roles.all.each do |role| %>
    <%= role.name %>
  <% end %>
</p>

<p>
  <b><%= I18n.t('right', :count => 2).capitalize %> : </b>
  <% @admin.rights.all.each do |right| %>
    <%= right.name %>
  <% end %>
</p>

<% @content_for_tools << link_to(I18n.t('edit').capitalize, edit_admin_admin_path(@admin)) << link_to(I18n.t('back').capitalize, admin_admins_path) %>
