<% form_tag admin_session_path do -%>
  <p><%= label_tag :email, I18n.t('email').capitalize %> : <%= text_field_tag 'email' %></p>
  <p><%= label_tag :password, I18n.t('password').capitalize %> : <%= password_field_tag 'password' %></p>
  <p><%= label_tag :remember_me, I18n.t('remember_me').capitalize %> : <%= check_box_tag 'remember_me' %></p>
  <p><%= submit_tag I18n.t('log_in').capitalize %></p>
<% end -%>
