{
'iTotalDisplayRecords': <%= @tattributes.total_entries || 0 %>,
'aaData': [
<% @tattributes.each do |tattribute| %>
  <% 
    link_id = "tattribute_#{tattribute.id}"
  %>
  [
  '<%= escape_javascript content_tag(:div, "", :class => 'product-name') %>',
  '<%= escape_javascript content_tag(:div, link_to(tattribute.name, [:admin, tattribute]), :class => 'product-name') -%>
   <%= escape_javascript link_to('', [:edit, :admin, tattribute], :class => 'small-icons edit-link') -%>
   <%= escape_javascript link_to_remote('', :url => [:admin, tattribute],
         :method => :delete,
         :confirm => I18n.t('tattribute.destroy.confirm').capitalize,
         :success => "removedataTablesRow('#destroy_#{link_id}')", 
         :html => {
         :class => 'small-icons destroy-link', :id => "destroy_#{link_id}"
       })
   %>'
    ] <%= ',' unless @tattributes.last == tattribute %>
<% end %>
]
}
