<%
  output = {
    :iTotalDisplayRecords => @forms.total_entries || 0,
    :aaData => @forms.collect do |form|
      [
        content_tag(:div, '', :id => polymorphic_html_id(form)),
        form.name,
        form.model,
        link_to('', :url => [forgeos_commerce, :admin, form],
          :remote => true,
          :method => :delete,
          :confirm => I18n.t('form.destroy.confirm').capitalize,
          :class => 'small-icons destroy-link',
          :id => polymorphic_html_id(form, 'destroy')
        )
      ]
    end
  }
-%>
<%= raw output.to_json -%>
