<%
  output = {
    :sEcho => params[:sEcho],
    :iTotalRecords => @transporters.total_entries || 0,
    :iTotalDisplayRecords => @transporters.size,
    :aaData => @transporters.collect do |transporter|
      klass = transporter.active? ? 'see-on' : 'see-off'
      [
        content_tag(:div, "&nbsp;", :id => polymorphic_html_id(transporter), :class => 'small-icons transporters'),
        #content_tag(:div, link_to(transporter.name, [forgeos_commerce, :admin, transporter]), :class => 'tranporter-name'),
        content_tag(:div, link_to(transporter.name, [forgeos_commerce, :edit, :admin, transporter], :class => 'tranporter-name'),
        link_to('', [forgeos_commerce, :activate, :admin, transporter],
          :remote => true,
          :class => "small-icons #{klass}",
          :id => polymorphic_html_id(transporter, 'show')
        ),
        link_to('', [forgeos_commerce, :edit, :admin, transporter], :class => 'small-icons edit-link') +
        link_to('', [forgeos_commerce, :admin, transporter],
          :remote => true,
          :method => :delete,
          :confirm => I18n.t('transporter.destroy.confirm').capitalize,
          :class => 'small-icons destroy-link',
          :id => polymorphic_html_id(transporter, 'destroy')
        )
      ]
    end
  }
-%>

<%= raw output.to_json -%>
