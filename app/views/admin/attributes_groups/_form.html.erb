<%= display_standard_flashes %>
<% form_for :attributes_group, :url => { :id => attributes_group.id } do |f| %>
  <p><b><%= f.label :name %> : </b><%= f.text_field :name %></p>
  <p><b><%= f.label :dynamic %> : </b><%= f.check_box :dynamic, :onchange => "Effect.toggle('attributes_fieldset','Appear')" %></p>
  <center><%= f.submit 'Save' %></center>
<% end %>
<fieldset id="attributes_fieldset"<% if attributes_group.dynamic? %> style="display: none;"<% end %>>
    <legend><%= link_to_effect_toggle('Attributes','attributes') %></legend>
  <div id="attributes">
    <%= render :partial => 'list_attributes', :locals => { :group => attributes_group } %>
  </div>
</fieldset>
<fieldset>
  <legend><%= link_to_effect_toggle('Pictures','attributes_group_pictures') %></legend>
  <div id="attributes_group_pictures">
    <%= link_to_unless attributes_group.id.nil?, 'create a picture',
      { :controller => 'pictures', :action => 'create',
        :target => 'attributes_group', :target_id => attributes_group.id }, 
        :class => 'add' %>
    <div id="list_pictures">
      <%= render :partial => 'admin/pictures/list', :locals => { :pictures => attributes_group.pictures, :target => 'attributes_group', :target_id => attributes_group.id } %>
    </div>
  </div>
</fieldset>
<%= hide_html_elements_onload %w[attributes_group_pictures attributes] %>
<% @content_for_tools << link_to('list', { :controller => 'admin/attributes_groups', :action => 'index' }, :class => 'house' )%>
