<fieldset>
  <legend><%= link_to_effect_toggle('Attributes', 'static_attributes') %></legend>
  <% form_for :attribute, :url => { :attr_id => attribute.id, :id => attribute.attributes_group.id }, :update => 'attributes',
    :html => { :id => 'static_attributes' } do |f| %>
      <p><b><%= f.label :name %> : </b><%= f.text_field :name %></p>
    <center>
      <%= f.submit 'Save' %>
      <%= link_to 'back', :back %>
    </center>
  <% end %>
</fieldset>

<fieldset>
  <legend><%= link_to_effect_toggle('Pictures','attributes_pictures') %></legend>
  <div id="attributes_pictures">
    <%= link_to_unless attribute.id.nil?, 'create a picture', 
      new_admin_picture_path(:target => 'tattribute', :target_id => attribute.id),
      :class => 'add'
    %>
    <div id="list_pictures">
      <%= render :partial => 'admin/pictures/list', :locals => { :pictures => attribute.pictures, :target => 'tattribute', :target_id => attribute.id } %>
    </div>
  </div>
</fieldset>

<%= hide_html_elements_onload %w[attributes_pictures static_attributes] %>
<% @content_for_tools << link_to('edit AttributesGroup', edit_admin_attributes_group_path(attribute.attributes_group), :class => 'manage') %>
