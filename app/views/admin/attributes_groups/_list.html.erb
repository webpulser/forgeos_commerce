<% @content_for_tools << link_to('create attributes group', new_admin_attributes_group_path, :class => 'add' ) %>
<%= display_standard_flashes %>
<table>
  <thead>
    <th><%= 'Name' %></th>
    <th><%= 'ValuesCount' %></th>
    <th>Action</th>
  </thead>
  <% unless groups.empty? %>
    <tbody>
      <% groups.each do |attr_group| %>
      <tr>
        <td><%= attr_group.name %></td>
        <td><%= (attr_group.dynamic? ? 'Dynamic' : attr_group.tattributes.count) %></td>
        <td>
          <%= link_to 'edit', edit_admin_attributes_group_path(attr_group) %>
          <%= link_to 'destroy', admin_attributes_group_path(attr_group), :method => 'delete' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
