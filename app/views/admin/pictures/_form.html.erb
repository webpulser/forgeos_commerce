<%= display_standard_flashes %>
<%= image_tag picture.public_filename(:normal) unless picture.id.nil? %>
<% form_for picture, :url => { :id => picture.id, :target => params[:target], :target_id => params[:target_id] }, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= f.file_field :uploaded_data %>
  <%= f.hidden_field :product_ids %>
  <%= f.hidden_field :attributes_group_ids %>
  <%= f.hidden_field :tattribute_ids %>
  <%= f.hidden_field :category_ids %>
  <%= f.submit 'Save' %>
<% end %>
<% @content_for_tools << link_to('list', { :controller => 'admin/pictures', :action => 'index' }, :class => 'house' )%>
