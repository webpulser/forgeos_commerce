#sidebar.grid_4.omega.alpha
  .backgrounds.header
  .backgrounds.sidebar-background
  .sidebar-content
    %h2.small-icons.orders= link_to_function I18n.t('order.all').capitalize, "select_all_elements('/admin/orders.json')"
    #orders-tree.a-tree
      %ul
        - Order.aasm_states.each do |state|
          - state_name = state.name.to_s
          %li= link_to_function "#{I18n.t(state_name, :scope => [:order, :status])}#{content_tag(:span, Order.count(:conditions => { :status => state_name }))}","select_all_elements('/admin/orders.json?filter=status&status=#{state_name}')"

#content.grid_12.alpha.omega
  .backgrounds.header
    - link_to new_admin_order_path, :class=>'backgrounds action-button' do
      %span.big-icons.create-order= I18n.t('order.create.action').capitalize
    #search.right= fg_search
    .backgrounds.search-form
  .content-background
    %table#table.datatable
      %thead
        %tr
          %th
          %th= I18n.t('id').capitalize
          %th= I18n.t('total').capitalize
          %th= I18n.t('product', :count => 1).capitalize
          %th Date
          %th= I18n.t('customer', :count => 1).capitalize
          %th= I18n.t('status', :count => 1).capitalize

= dataTables_tag 7, :url => admin_orders_path(:format => :json)
