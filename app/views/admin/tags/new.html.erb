<% remote_form_for @tag, :url => admin_tags_path(:id => @taggable.id, :type => @taggable.class), :update => "tags_for_#{@taggable.id}" do |f|%>
  <%= f.text_field :name %>
  <%= f.submit I18n.t('save') %>
  <%= link_to_remote I18n.t('cancel'),:url => admin_tag_path(@taggable, :type => @taggable.class),:method => :put, :update => "tags_for_#{@taggable.id}" %>
<% end %>
