.fieldset
  %a.small-icons.panel{ :href => '#' }
    = I18n.t('user.contact_infos').capitalize
  .option-panel-content
    .street-input
      %label
        = I18n.t(:password).capitalize
      = f.password_field :password
    .street-input
      %label
        = I18n.t(:password_confirmation).capitalize
      = f.password_field :password_confirmation
    .street-input
      %label
        = I18n.t(:birthday).capitalize
      = f.text_field :birthday, :class => 'date-picker'
    .street-input
      %label
        = I18n.t(:civility, :count => 1).capitalize
      = f.select :civility, I18n.t('civility.label'), :prompt => I18n.t('please_select')
    .country-select
      %label
        = I18n.t(:country).capitalize
      = f.collection_select 'country_id', Country.find(:all, :order => "name"), :id, :printable_name, :selected => user.country_id, :prompt => I18n.t('please_select')
  .clear
