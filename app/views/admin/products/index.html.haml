#sidebar.grid_4.omega.alpha
  .backgrounds.header
    %span.backgrounds.action-button.create-action
      %span.big-icons.new-category
      %span.small-icons.arrow
      %span.create-list
        %span.big-icons.create-folder
          = "create a folder"
        -#%span.small-icons.create-smart-folder
          -#= "create a smart folder "
    %span.backgrounds.action-button.update-action
      %span.small-icons.more-actions
      %span.small-icons.arrow
      %span.update-list
        %span.small-icons.modify-folder
          = "modify a folder"
        %span.small-icons.duplicate-folder
          = "duplicate a folder "
        %span.small-icons.delete-folder
          = "delete a folder "
  .backgrounds.sidebar-background
  .sidebar-content
    %h2.small-icons.products
      = link_to I18n.t('product.all').capitalize, admin_products_path
    #product-tree.a-tree
      %ul
        = render :partial => 'admin/categories/list', :locals => { :categories => ProductCategory.find_all_by_parent_id(nil) }
#content.grid_12.alpha.omega
  .backgrounds.header
    = link_to content_tag(:span,I18n.t('product.create.action').capitalize, :class=>'big-icons create-product'), new_admin_product_path, :class=>'backgrounds action-button'
    #search.right
      = link_to content_tag(:span, I18n.t('search').capitalize, :class => 'small-icons search-span'), '#', :class => 'small-icons left search-link'
    .backgrounds.search-form
  .content-background
  %table#table.datatable
    %thead
      %tr
        %th
        %th
          = I18n.t('name').capitalize
        %th
          = I18n.t('price', :count => 1).capitalize
        %th
          = I18n.t('stock', :count=>1).capitalize
        %th
          = I18n.t('product_type', :count => 1).capitalize
        %th
          = I18n.t('show').capitalize
    %tbody

  #add-product-link.backgrounds.header.add-products
    /= link_to content_tag(:span, 'Add existing products to this collection', :class => 'big-icons'),'#'


= dataTables_tag 6, :url => admin_products_path(:format => :json)
