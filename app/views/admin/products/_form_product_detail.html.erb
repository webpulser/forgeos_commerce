<%= display_standard_flashes %>
<fieldset>
  <legend><%= link_to_effect_toggle(I18n.t('attribute', :count => 2).humanize,'static_attributes') %></legend>
  <% form_for :product_detail, :url => { :id => (product_detail.id || product_detail.product_parent.id) }, :html => { :id => 'static_attributes' } do |f| %>
    <p>
    <b><%= f.label :categories, I18n.t('category', :count => 2).humanize %> : </b>
      <%= select_tag "product_detail[category_ids][]",
        options_from_collection_for_select(Category.all, :id, :name,
                                           product_detail.category_ids ),
        :multiple => true %>
    </p>
    <p><b><%= f.label :reference, I18n.t('reference').humanize %> : </b><%= f.text_field :reference %></p>
    <p><b><%= f.label :name, I18n.t('name').humanize %> : </b><%= f.text_field :name %></p>
    <p><b><%= f.label :description, I18n.t('description').humanize %> : </b><%= f.text_area :description %></p>
    <p><b><%= f.label :selling_date, I18n.t('selling_date').humanize %> : </b><%= f.date_select :selling_date, :include_blank => true %></p>
    <p><b><%= f.label :offer_month, I18n.t('offer_month').humanize %> : </b><%= f.check_box :offer_month %></p>
    <p><b><%= f.label :on_first_page, I18n.t('on_first_page').humanize %> : </b><%= f.check_box :on_first_page %></p>
    <p><b><%= f.label :stock, I18n.t('stock', :count => 1).humanize %> : </b><%= f.text_field :stock %></p>
    <p><b><%= f.label :price, I18n.t('price', :count => 1).humanize %> : </b><%= f.text_field :price %></p>

    <% product_detail.attributes_groups.each do |attr_group| %>
      <p><b><%= label_tag attr_group.name %> : </b>
      <% unless attr_group.dynamic? %>
        <%= select_tag "product_detail[tattribute_ids][]",
            options_from_collection_for_select(attr_group.tattributes, :id, :name,
              (attr_group.tattribute_ids & product_detail.tattribute_ids)),
            :multiple => true %>
      <% else %>
        <% dynamic_attribute = product_detail.dynamic_attributes.find_by_attributes_group_id(attr_group.id) %>
        <%= text_field "dynamic_attributes[#{attr_group.id}]", 'value', :value => (dynamic_attribute.value unless dynamic_attribute.nil?) %>
      <% end %>
      </p>
    <% end %>
    <center><%= f.submit I18n.t('save').humanize %><%= link_to I18n.t('back').humanize, :back %></center>
  <% end %>
</fieldset>

<fieldset>
  <legend><%= link_to_effect_toggle(I18n.t('picture', :count => 2).humanize,'product_pictures') %></legend>
  <div id="product_pictures">
    <%= link_to_unless product_detail.new_record?,I18n.t('create_picture').humanize,
      new_admin_picture_path(:target => 'product', :target_id => product_detail.id),
      :class => 'add' %>
    <div id="list_pictures">
      <%= render :partial => 'admin/pictures/list', :locals => { :pictures => product_detail.pictures, :target => 'product', :target_id => product_detail.id } %>
    </div>
  </div>
</fieldset>

<%= hide_html_elements_onload %w[static_attributes product_pictures] %>
<% @content_for_tools << link_to(I18n.t('edit_product_parent').humanize, edit_admin_product_path(product_detail.product_parent), :class => 'manage' ) if product_detail.product_parent %>
