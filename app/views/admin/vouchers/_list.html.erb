<%= display_standard_flashes %>
<table>
  <thead>
    <th>Name</th>
    <th>Code</th>
    <th>Value</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.name %></td>
        <td><%= voucher.code %></td>
        <td><%= voucher.value %></td>
        <td>
          <%= link_to 'show', { :controller => 'admin/vouchers', :action => 'show', :id => voucher.id } %>
          <%= link_to 'edit', { :controller => 'admin/vouchers', :action => 'edit', :id => voucher.id } %>
          <%= link_to_remote 'destroy', :url => { :controller => 'admin/vouchers', :action => 'destroy', :id => voucher.id }, :confirm => 'Are you sure to destroy this voucher ?', :update => 'vouchers', :method => 'get' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% @content_for_tools << link_to('create a voucher', { :controller => 'admin/vouchers', :action => 'create' }, :class => 'add') %>
