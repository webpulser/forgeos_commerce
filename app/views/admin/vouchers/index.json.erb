<% 
  output = {
    :sEcho => params[:sEcho],
    :iTotalRecords => @vouchers.total_entries || 0,
    :iTotalDisplayRecords => @vouchers.size,
    :aaData => @vouchers.collect do |voucher|
      klass = voucher.active? ? 'see-on' : 'see-off'
      [
        content_tag(:div, '', :id => polymorphic_html_id(voucher)),
        voucher.name,
        link_to('', [forgeos_commerce, :activate, :admin, voucher],
          :remote => true,
          :class => "small-icons #{klass}",
          :id => polymorphic_html_id(voucher, 'show')
        ),
        voucher.use,
        voucher.code,
        link_to('', [forgeos_commerce, :admin, voucher],
          :method => :delete,
          :confirm => I18n.t('voucher.destroy.confirm').capitalize,
          :class => 'small-icons destroy-link',
          :id => polymorphic_html_id(voucher, 'destroy')
        )
      ]
    end
  }
-%>
<%= raw output.to_json -%>
