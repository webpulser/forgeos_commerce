<%= display_standard_flashes %>
<table>
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% shipping_methods.each do |shipping_method| %>
      <tr>
        <td><%= shipping_method.name %></td>
        <td><%= shipping_method.description %></td>
        <td>
          <%= link_to 'show', admin_shipping_method_path(shipping_method) %>
          <%= link_to 'edit', edit_admin_shipping_method_path(shipping_method) %>
          <%= link_to_remote 'destroy', :url => admin_shipping_method_path(shipping_method), :update => 'shipping_methods', :method => 'delete', :confirm => 'are your sure toi destroy this Shipping Method ?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% @content_for_tools << link_to('create a shipping method', new_admin_shipping_method_path, :class => 'add') %>
