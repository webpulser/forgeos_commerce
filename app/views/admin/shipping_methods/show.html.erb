<h1><%= I18n.t('shipping_method', :count => 1).capitalize %></h1>
<p><b><%= I18n.t('name').capitalize %> : </b><%= @shipping_method.name %></p>
<p><b><%= I18n.t('description').capitalize %> : </b><%= @shipping_method.description %></p>

<fieldset>
  <legend><%= link_to_effect_toggle(I18n.t('shipping_method_detail', :count=>2).capitalize,'details') %></legend>
  <div id="details">
    <%= render :partial => 'list_details', :locals => { :shipping_method => @shipping_method } %>
  </div>
</fieldset>
