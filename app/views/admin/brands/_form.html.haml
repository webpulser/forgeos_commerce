

- form_for [:admin , brand], :html => { :id => 'wrap' } do |f|
  .backgrounds.big-header

    .interact-links
      = fg_submit_tag 'save_changes'
      = I18n.t('or')
      = link_to I18n.t('cancel').capitalize, admin_brands_path, :class => 'back-link'

  #content.grid_16.alpha.omega
    .grid_12.omega
      = f.label :name , I18n.t('brand.name')
      %br
      = f.text_field :name, :class => 'orange_input'
      .clear
      %h2.permalink
        = t('permalink').capitalize
        \:
        = "#{request.protocol}#{request.host}/marques/"
        = f.text_field :url
      %br
      = f.label :description, I18n.t('brand.description')
      %br
      = f.text_area :description, :class => 'mceEditor'
      %br
    .grid_4.alpha
      = display_visual_style(f.object_name, brand.picture)
    .clear
    .grid_12
      = I18n.t('brand.comment_title')
      .clear
      - f.fields_for :comments do |comment|
        = comment.hidden_field :title, :value => 'brand title'
        = f.label :person_id, I18n.t('brand.vendor')
        .clear
        = comment.collection_select :person_id, Vendor.all(:order => 'name DESC'), :id, :name, :prompt => t(:please_select)
        .clear
        = f.label :comment, I18n.t('brand.comment')
        .clear
        = comment.text_area :comment, :class => 'mceEditor'

  = render :partial => 'admin/visual/visual_popup.html.haml', :locals => {:form => f}
