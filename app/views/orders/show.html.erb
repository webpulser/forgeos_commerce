<p>
  <b><%= I18n.t('address_invoice').capitalize %></b> 
  <%= render :partial => 'addresses/show', :locals => { :address => @order.address_invoice } %>
</p>
<p>
  <b><%= I18n.t('address_delivery').capitalize %></b> 
  <%= render :partial => 'addresses/show', :locals => { :address => @order.address_delivery } %>
</p>

<h3><%= I18n.t('product', :count=>@order.orders_details.count).capitalize %></h3>
<table>
  <thead>
    <th><%= I18n.t('name').capitalize %></th>
    <th><%= I18n.t('price', :count=>1).capitalize %></th>
    <th><%= I18n.t('quantity',:count =>1).capitalize %></th>
    <th><%= I18n.t('rate_tax').capitalize %></th>
    <th><%= I18n.t('action', :count=>2).capitalize %></th>
  </thead>
  <tbody>
  <% @order.orders_details.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.rate_tax %></td>
      <td>
        <%= link_to_if false, I18n.t('cancel').capitalize, :url => :root %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to_remote I18n.t('back').capitalize, :url => orders_path, :update => 'orders', :method => 'get' %>
