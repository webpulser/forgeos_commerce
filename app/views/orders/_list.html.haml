- if orders.empty?
  = I18n.t('order', :count => 0).capitalize
- else
  %table
    %thead
      %tr
        %th
          = I18n.t('reference').capitalize
        %th
          = I18n.t('status', :count=>1).capitalize
        %th
          = I18n.t('address.delivery', :count => 1).capitalize
        %th
          = I18n.t('action', :count=>2).capitalize
    %tbody
      - orders.each do |order|
        %tr
          %td
            - #= order.reference
          %td
            = I18n.t(order.aasm_current_state).capitalize
          %td
            %pre
              = order.address_delivery.civility.name
              \&nbsp;
              = order.address_delivery.name
              \&nbsp;
              = order.address_delivery.firstname
              = order.address_delivery.address
              \&nbsp;
              = order.address_delivery.address_2
              = order.address_delivery.zip_code
              \&nbsp;
              = order.address_delivery.city
              = order.address_delivery.country.name
          %td
            = link_to_remote I18n.t('show').capitalize, :url => order_path(order), :method => 'get', :update => 'orders'
            \-
            - #= link_to_remote I18n.t('destroy').capitalize, :url => order_path(order), :confirm => I18n.t('order.destroy.confirm').capitalize, :method => 'delete', :update => 'orders'
