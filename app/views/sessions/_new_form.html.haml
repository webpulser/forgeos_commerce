- form_tag session_path do
  %p
    %label{ :for => "email" }
      = I18n.t('email').capitalize
      = text_field_tag 'email', '', :autocomplete => 'off'
    %br
  %p
    %label{ :for => "password" }
      = I18n.t('password').capitalize
    %br
    = password_field_tag 'password','', :autocomplete => 'off'
  %p
    = check_box_tag 'remember_me'
    %label{ :for => "remember_me" }
      = I18n.t('remember_me').capitalize
  %p
    = submit_tag I18n.t('log_in').capitalize, :class=>'submit-button'
  .clear
